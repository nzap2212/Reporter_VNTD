<UserControl x:Class="Reporter_wpf.Components.SidebarMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <!-- User Info -->
        <Border Height="120" Background="#0D47A1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Ellipse Width="50" Height="50" Margin="0,0,0,10" Fill="#42A5F5"/>
                <TextBlock Text="Quản trị viên" 
                           Foreground="White" 
                           FontSize="14" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Navigation Menu -->
        <Button Content="🏠 Tổng quan" 
                Command="{Binding NavigateCommand}" 
                CommandParameter="Dashboard"
                Background="Transparent"
                Foreground="White"
                FontSize="14"
                BorderThickness="0"
                Padding="15,12"
                HorizontalContentAlignment="Left"/>
        
        <Button Content="📊 Khám chữa bệnh toàn viện" 
                Command="{Binding NavigateCommand}" 
                CommandParameter="KhamChuaBenh"
                Background="Transparent"
                Foreground="White"
                FontSize="14"
                BorderThickness="0"
                Padding="15,12"
                HorizontalContentAlignment="Left"/>
        
        <Button Content="🏥 Kết quả nội trú" 
                Command="{Binding NavigateCommand}" 
                CommandParameter="KetQuaNoiTru"
                Background="Transparent"
                Foreground="White"
                FontSize="14"
                BorderThickness="0"
                Padding="15,12"
                HorizontalContentAlignment="Left"/>
        
        <Button Content="💉 Dịch vụ theo yêu cầu" 
                Command="{Binding NavigateCommand}" 
                CommandParameter="DichVuYeuCau"
                Background="Transparent"
                Foreground="White"
                FontSize="14"
                BorderThickness="0"
                Padding="15,12"
                HorizontalContentAlignment="Left"/>
        
        <Button Content="👨‍⚕️ Khoa khám bệnh" 
                Command="{Binding NavigateCommand}" 
                CommandParameter="KhoaKhamBenh"
                Background="Transparent"
                Foreground="White"
                FontSize="14"
                BorderThickness="0"
                Padding="15,12"
                HorizontalContentAlignment="Left"/>
        
        <Button Content="🚑 Phòng khám ngoại trú" 
                Command="{Binding NavigateCommand}" 
                CommandParameter="PhongKhamNgoaiTru"
                Background="Transparent"
                Foreground="White"
                FontSize="14"
                BorderThickness="0"
                Padding="15,12"
                HorizontalContentAlignment="Left"/>
        
        <Button Content="🚨 Phòng khám cấp cứu" 
                Command="{Binding NavigateCommand}" 
                CommandParameter="PhongKhamCapCuu"
                Background="Transparent"
                Foreground="White"
                FontSize="14"
                BorderThickness="0"
                Padding="15,12"
                HorizontalContentAlignment="Left"/>
        
        <Button Content="🧑‍🔬 Phòng khám yêu cầu" 
                Command="{Binding NavigateCommand}" 
                CommandParameter="PhongKhamYeuCau"
                Background="Transparent"
                Foreground="White"
                FontSize="14"
                BorderThickness="0"
                Padding="15,12"
                HorizontalContentAlignment="Left"/>
        
        <Button Content="⚙️ Cài đặt" 
                Command="{Binding NavigateCommand}" 
                CommandParameter="Settings"
                Background="Transparent"
                Foreground="White"
                FontSize="14"
                BorderThickness="0"
                Padding="15,12"
                HorizontalContentAlignment="Left"/>
    </StackPanel>
</UserControl> 